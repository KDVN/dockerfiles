<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
		<!-- Rule for KDERP Project Hai Phong-->
		<record id="kderp_rule_project_haiphong_local" model="ir.rule">
            <field name="name">KDERP Project - Hai Phong see Project in Hai Phong only</field>
            <field name="model_id" ref="model_account_analytic_account"/>
            <field name="global" eval="False"/>
    		<field name="domain_force">['|','|',('code', 'ilike','PE%%'),('code', 'ilike','PP%%'),('code', 'ilike','PM%%')]</field>
    		<field eval="[(6,0,[ref('kderp_project.group_kderp_project_haiphong_menu')])]" name="groups"/>
        </record>        
      
      <!-- PM - Rule for Project -->
		<record id="kderp_rule_dashboard_pm_project" model="ir.rule">
            <field name="name">KDERP Dashboard - Project Manager see all Project related</field>
            <field name="model_id" ref="model_account_analytic_account"/>
           	<field eval="[(6,0,[ref('kderp_board.group_kderp_dashboard_project_manager')])]" name="groups"/>
            <field eval="False" name="global"/>
           <field name="domain_force">['&amp;',('state','in',['doing','done']),'|',('project_manager_ref','=',user.id),('user_id','=',user.id)]</field>
         </record> 
        
     <!-- GPM - Rule for Project -->
		<record id="kderp_rule_dashboard_gpm_project" model="ir.rule">
            <field name="name">KDERP Dashboard - General Project Manager see all Project related</field>
            <field name="model_id" ref="model_account_analytic_account"/>
           	<field eval="[(6,0,[ref('kderp_board.group_kderp_dashboard_general_project_manager')])]" name="groups"/>
            <field eval="False" name="global"/>
           <field name="domain_force">['&amp;',('state','in',['doing','done']),('general_project_manager_id','=',user.id)]</field>
        </record>
        
     <!-- ASM - Rule for Project -->
		<record id="kderp_rule_dashboard_asm_project" model="ir.rule">
            <field name="name">KDERP Dashboard - Area Site Manager see all Project related</field>
            <field name="model_id" ref="model_account_analytic_account"/>
           	<field eval="[(6,0,[ref('kderp_board.group_kderp_dashboard_area_site_manager')])]" name="groups"/>
            <field eval="False" name="global"/>
           <field name="domain_force">['&amp;',('state','in',['doing','done']),('area_site_manager_id','=',user.id)]</field>
        </record>        
        
     <!-- SM - Rule for Project -->
		<record id="kderp_rule_dashboard_sm_project" model="ir.rule">
            <field name="name">KDERP Dashboard - Site Manager see all Project related</field>
            <field name="model_id" ref="model_account_analytic_account"/>
            <field eval="[(6,0,[ref('kderp_board.group_kderp_dashboard_site_manager')])]" name="groups"/>
            <field eval="False" name="global"/>
        <field name="domain_force">['&amp;',('state','in',['doing','done']),('manager_id','=',user.id)]</field>
        </record>  
        
        <!-- UVP - Rule for Project -->
		<record id="kderp_user_view_project" model="ir.rule">
            <field name="name">KDERP User View Project</field>
            <field name="model_id" ref="model_account_analytic_account"/>
            <field eval="[(6,0,[ref('kderp_board.group_kderp_dashboard_user_project')])]" name="groups"/>
            <field eval="False" name="global"/>
            <field name="domain_force">[('state','in',['doing','done']),('user_related_ids.id','=',user.id)]</field>
        </record> 	
        
        
	</data>
</openerp>