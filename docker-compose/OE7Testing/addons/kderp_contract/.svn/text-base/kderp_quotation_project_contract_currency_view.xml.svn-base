<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
	 		
 		<record id="kderp_view_contract_quotation_project_currency_tree" model="ir.ui.view">
            <field name="name">kderp.quotation.contract.project.line.tree</field>
            <field name="model">kderp.quotation.contract.project.line</field>
            <field eval="1" name="priority"/>
            <field name="arch" type="xml">
                <tree string="Job Info." fonts="bold:amount_currency==0">
                    <field name="account_analytic_id"/>
					<field name="currency_id"/>
					<field name="amount_currency"/>
				</tree>
			</field>
		</record>

 		<record id="kderp_view_contract_quotation_project_currency_form" model="ir.ui.view">
            <field name="name">kderp.quotation.contract.project.line.form</field>
            <field name="model">kderp.quotation.contract.project.line</field>
            <field eval="1" name="priority"/>
            <field name="arch" type="xml">
                <form string="Job Info.">
                    <field name="account_analytic_id" string="Job"/>
					<field name="currency_id" string="Currency"/>
					<field name="amount_currency" string="Amount"/>
				</form>
			</field>
		</record>

    </data>
</openerp>
