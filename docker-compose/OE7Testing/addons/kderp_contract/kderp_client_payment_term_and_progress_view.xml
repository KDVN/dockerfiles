<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_kderp_payment_term_line_tree" model="ir.ui.view">
            <field name="name">kderp.client.payment.term.tree</field>
            <field name="model">kderp.client.payment.term</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree editable="top" string='Payment Term'>
                    <field name="name"/>
                    <field name="type"/>
                    <field name="value_amount"/>
                    <field name="due_date"/>
                    <field name="sequence"/>
                </tree>
            </field>
        </record>

        <record id="view_kderp_payment_term_line_form" model="ir.ui.view">
            <field name="name">kderp.client.payment.term.form</field>
            <field name="model">kderp.client.payment.term</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string='Payment Term'>
                    <field name="name"/>
                    <field name="type"/>
                    <field name="value_amount"/>
                    <field name="due_date"/>
                    <field name="sequence"/>                    
				</form>
            </field>
        </record>
        
        
        <!-- Progress Evaluation Area -->
        <record id="view_kderp_progress_evaluation_tree" model="ir.ui.view">
            <field name="name">kderp.progress.evaluation.tree</field>
            <field name="model">kderp.progress.evaluation</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree editable="top" string='Progress Evaluation Sheet'>
                    <field name="name"/>
                    <field name="date"/>
                    <field name="advanced"/>
                    <field name="retention"/>
                    <field name="amount"/>
                    <field name="vat"/>
                </tree>
            </field>
        </record>

        <record id="view_kderp_progress_evaluation_form" model="ir.ui.view">
            <field name="name">kderp.progress.evaluation.form</field>
            <field name="model">kderp.progress.evaluation</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string='Progress Evaluation Sheet'>
                    <field name="name"/>
                    <field name="date"/>
                    <field name="advanced"/>
                    <field name="retention"/>
                    <field name="amount"/>
                    <field name="vat"/>                    
				</form>
            </field>
        </record>

	</data>
</openerp>