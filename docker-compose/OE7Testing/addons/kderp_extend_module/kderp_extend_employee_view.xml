<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>		
		<record model="ir.ui.view" id="view_employee_working_extend_form">
			<field name="name">kderp.employee.working.extend.form</field>
			<field name="model">hr.employee</field>
			<field name="inherit_id" ref="kderp_hr.view_kderp_employee_form"/>
			<field name="arch" type="xml">
				<field name='active' position='after'>
            		<field name="working"/>
            	</field>	
           	</field>
       	</record>
       	<record model="ir.ui.view" id="view_employee_working_extend_tree">
			<field name="name">kderp.employee.working.extend.tree</field>
			<field name="model">hr.employee</field>
			<field name="inherit_id" ref="kderp_hr.view_kderp_employee_tree"/>
			<field name="arch" type="xml">
				<field name='parent_id' position='after'>
            		<field name="working"/>
            	</field>	
           	</field>
       	</record>            
    </data>
</openerp>

