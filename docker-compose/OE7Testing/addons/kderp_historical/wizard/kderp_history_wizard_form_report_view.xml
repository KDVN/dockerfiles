<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

		<record id="views_kderp_historical_data_wizard_form" model="ir.ui.view">
			<field name="name">views.kderp.historical.data.wizard.form</field>
			<field name="model">kderp.historical.data.wizard.form</field>
			<field name="arch" type="xml">
				<form string="Input Value for Historical Data Form" version="7.0" readonly="1" create="false" >
					<group colspan="2" col="2">
						<field name="pdate_start"/>
						<field name="pdate_end"/>
						<field name='file_type'/>
					</group>
					<footer>
						<button string='Print' name="print_report" type="object" class="oe_highlight"/>
						or
						<button string="Cancel"  special="cancel"/>
					</footer>
				</form>
			</field>
		</record>

        <record id="action_print_historical_data_form" model="ir.actions.act_window">
            <field name="name">Historical Data</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">kderp.historical.data.wizard.form</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="views_kderp_historical_data_wizard_form"/>
            <field name="target">new</field>
        </record>

 		<record model="ir.values" id="action_print_historical_data_form_values">
            <field name="model_id" ref="model_purchase_order_line" />
            <field name="name">Historical Data</field>
            <field name="key2">client_print_multi</field>
            <field name="value" eval="'ir.actions.act_window,' + str(ref('action_print_historical_data_form'))" />
            <field name="key">action</field>
            <field name="model">purchase.order.line</field>
        </record>

    </data>
</openerp>