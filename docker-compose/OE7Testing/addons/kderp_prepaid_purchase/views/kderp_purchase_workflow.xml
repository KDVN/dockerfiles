<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
    	
    	<record id="act_create_move_picking" model="workflow.activity">
	        <field name="wkf_id" ref="purchase.purchase_order"/>
	        <field name="name">create_move_picking</field>
			<field name="kind">function</field>
			<field name="flow_stop">True</field>
			<field name="action">action_create_received_picking()</field>
		</record>
    	
        <record id="kderp_purchase.trans_final_quotation_roa_completed" model="workflow.transition">
            <field name="act_from" ref="kderp_purchase.act_final_quotation"/>
            <field name="act_to" ref="kderp_purchase.act_roa_completed"/>
            <field name="signal">btn_final_quotation_roa_completed</field>
            <field name="condition">allocate_order==False</field>
        </record>
        
        <record id="kderp_purchase.trans_final_quotation_done_prepaid_case" model="workflow.transition">
            <field name="act_from" ref="kderp_purchase.act_final_quotation"/>
            <field name="act_to" ref="act_create_move_picking"/>
            <field name="signal">btn_final_quotation_roa_completed</field>
            <field name="condition">allocate_order==True</field>
        </record>

    </data>
</openerp>