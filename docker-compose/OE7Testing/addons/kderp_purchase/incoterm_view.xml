<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
    
        <record id="kderp_incoterm_view_form" model="ir.ui.view">
            <field name="name">kderp.incoterm.view.form</field>
            <field name="model">incoterm</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
				<form string="Incoterm">
					<field name="code" select="1"/>
					<field name="name" select="1"/>
					<field name="description" widget='text' colspan="4"/>
				</form>
			</field>
		</record>
        
		<record id="kderp_incoterm_view_tree" model="ir.ui.view">
            <field name="name">kderp.incoterm.view.tree</field>
            <field name="model">incoterm</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
				<tree string="Incoterm">
					<field name="code" select="1"/>
					<field name="name" select="1"/>
					<field name="description" widget='text' colspan="4"/>
				</tree>
			</field>
		</record>
		
		<record id="action_incoterm" model="ir.actions.act_window">
	         <field name="name">Incoterm</field>
	         <field name="type">ir.actions.act_window</field>
	         <field name="res_model">incoterm</field>
	         <field name="view_type">form</field>
	         <field name="view_mode">tree,form</field>
		</record>
	
    </data>
</openerp>

