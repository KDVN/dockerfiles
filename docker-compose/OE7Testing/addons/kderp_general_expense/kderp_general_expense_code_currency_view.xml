<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_kderp_general_expense_code_currency_tree" model="ir.ui.view">
            <field name="name">kderp.general.expense.code.currency.tree</field>
            <field name="model">kderp.general.expense.code.currency</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
				<tree editable="top" string="Currency System" >
                    <field name="name"/>
                    <field name="rate" string="Amount"/>
                </tree>
            </field>
        </record>
        
        <record id="view_kderp_general_expense_code_currency_form" model="ir.ui.view">
            <field name="name">kderp.general.expense.code.currency.form</field>
            <field name="model">kderp.general.expense.code.currency</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string='Currency '>
                    <field name="name"/>
                    <field name="rate"/>
                </form>
            </field>
        </record>
        
	</data>
</openerp>

