<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
		
		<record id="view_kderp_pay_to_supplier_filter" model="ir.ui.view">
            <field name="name">kderp.supplier.payment.expense.list.select</field>
            <field name="model">kderp.supplier.payment.expense.pay</field>
            <field eval="5" name="priority"/>
            <field name="arch" type="xml">
                <search string="Search Pay Payment">
                	<field name="date" widget="text" string="Supplier Payment No." domain="[]" filter_domain="[('supplier_payment_expense_id','ilike',self)]"/>
                </search>
            </field>
        </record>

        <record id="view_kderp_pay_to_suppplier_payment_expense_tree" model="ir.ui.view">
            <field name="name">kderp.supplier.payment.expense.pay.tree</field>
            <field name="model">kderp.supplier.payment.expense.pay</field>
            <field name="priority" eval="1"/>
            <field name="arch" type="xml">
                <tree colors="blue:state == 'draft';gray:state == 'cancel'" string="Supplier Payment" editable="top">
	                <field name="date"/>
	                <field name="journal_id"  widget='selection'/>
	                <!-- <field name="writeoff"/> -->
	                <field name="period_id"/>
	                <field name="currency_id"/>
	                <field name='bank_id'/>
	                <field name="amount"/>
	                <field name="exrate"/>
	                <field name='state'/>
                </tree>
            </field>
        </record>

        <record id="view_kderp_pay_to_suppplier_payment_expense_form" model="ir.ui.view">
            <field name="name">kderp.supplier.payment.expense.pay.form</field>
            <field name="model">kderp.supplier.payment.expense.pay</field>
            <field name='priority' eval="1"/>
            <field name="arch" type="xml">
                <form string="Pay to Supplier">
                	<button name='action_reconcile' type='object' string='Payment' colspan="4" states="draft" groups="kderp_payment.group_kderp_open_supplier_payment_expense"/>
                	<button name='action_unreconcile' type='object' string='Open' colspan="4" states="done" groups="kderp_payment.group_kderp_open_supplier_payment_expense"/>                	
	                <field name="date"/>
	                <field name="journal_id" widget='selection'/>
	                <!-- <field name="writeoff"/> -->
	                <field name="period_id"/>
	                <field name="currency_id"/>
	                <field name='bank_id'/>
	                <field name="amount"/>
	                <field name="exrate"/>
	                <field name="supplier_payment_expense_id"/>
	                <field name="move_id"/>
	                <field name='state'/>
               </form>
           </field>
       </record>

	 <record id="action_kderp_pay_to_supplier_expense_tree" model="ir.actions.act_window">
		<field name="name">Pay to Supplier (Expense)</field>
		<field name="res_model">kderp.supplier.payment.expense.pay</field>
		<field name="view_type">form</field>
		<field name="view_mode">tree,form</field>
		<field name="context">{'default_type':'in_invoice', 'type':'in_invoice', 'journal_type': 'purchase'}</field>
	 </record>

	 <menuitem action="action_kderp_pay_to_supplier_expense_tree" id="kderp_menu_pay_to_supplier_expense" sequence="15"
	 parent="kderp_other_expense.kderp_exepense_other_expense"/>
	 
	<record id="view_kderp_suppplier_payment_expense_form_add_payment_inherit" model="ir.ui.view">
           <field name="name">kderp.supplier.payment.expense.form.inherit</field>
           <field name="model">kderp.supplier.payment.expense</field>
			<field name="inherit_id" ref='kderp_supplier_payment.view_kderp_suppplier_payment_expense_form'/>
			<field name="arch" type="xml">
	            <page string='VAT Invoice &amp; Payment' position='inside'>
	            	<group string="VAT Invoices">
	            		<field name="kderp_vat_invoice_ids" widget='one2many' mode="tree" context="{'received_date':date,'expense_id':expense_id}" nolabel="1">
							<tree editable="bottom" string='VAT Invoices'>
								<field name="name" select="1" string="VAT Inv. No."/>
								<field name="date" select="1"/>
								<field name="currency_id" string="Cur."/>
								<field name="subtotal" on_change="on_changevalue_per(subtotal,tax_per,amount_tax,rate)"/>
								<field name="tax_per" on_change="on_changevalue_per(subtotal,tax_per,amount_tax,rate)"/>
								<field name="amount_tax" string="VAT" on_change="on_changevalue(subtotal,amount_tax,rate)"/>
								<field name="total_amount" on_change="onchange_totalamount(total_amount,equivalent_vnd,rate,'total_amount')" sum='Total'/>
								<field name="equivalent_vnd" on_change="onchange_totalamount(total_amount,equivalent_vnd,rate,'ev')"/>
								<field name="rate" on_change="onchange_totalamount(total_amount,equivalent_vnd,rate,'rate')"/>
								<field name='received_date'/>
								<field name="to_accounting_date"/>
								<field name="returned_date"/>
								<field name='state' invisible="1"/>
							</tree>
	            		</field>
	            	</group>
	            	<group string="Paid">
	            		<field name="payment_ids" colspan="4" nolabel="1" />
	            	</group>
	            </page>            
        </field>
	</record>
	
	</data>
</openerp>